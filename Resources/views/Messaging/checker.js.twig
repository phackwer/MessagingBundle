<script>
    function sanSISMessagesCheck(){
        $.ajax({
                type:'GET',
                url: '{{ path('sansis_has_messages_check') }}'
        }).done(function(data){
            if (data.chk == true) {
                $('#sansis_mesasage_checker').css({'color' : '#FF0000'}).html('(' + data.total + ') Mensagens');
            } else {
                $('#sansis_mesasage_checker').css({'color' : '#FFFFFF'}).html('(' + data.total + ') Mensagens');
            }
            window.setTimeout(sanSISMessagesCheck, 5000);
        });
    }

    $(document).ready(function(){
        sanSISMessagesCheck();
    });
</script>
